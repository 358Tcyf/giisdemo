<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDefault" parent="AppThemeTeal">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorPrimaryLight">?attr/colorPrimaryLight</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="colorText_Icon">@color/colorText_Icon</item>
    </style>

    <style name="AppThemeTeal" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/teal_colorPrimary</item>
        <item name="colorPrimaryDark">@color/teal_colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/teal_colorPrimaryLight</item>
        <item name="colorAccent">@color/teal_colorAccent</item>
    </style>

