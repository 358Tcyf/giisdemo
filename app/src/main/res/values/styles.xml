        <item name="colorPrimaryDark">@color/teal_colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/teal_colorPrimaryLight</item>
        <item name="colorAccent">@color/teal_colorAccent</item>
    </style>


    <style name="ThemeSplash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@mipmap/ic_background</item>
        <item name="colorPrimary">@color/teal_colorPrimary</item>
        <item name="colorPrimaryDark">@color/teal_colorPrimaryDark</item>
        <item name="colorAccent">@color/teal_colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


